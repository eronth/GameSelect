<Window x:Class="GameSelect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameSelect"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock x:Name="txtIntro" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Generate a choice or edit options." VerticalAlignment="Top" FontFamily="DengXian" FontSize="14.667"/>
        <Button x:Name="btnSelectGame" Content="Roll Games" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Width="75" Click="btnSelectGame_Click_1"/>
        <Button x:Name="btnEdit" Content="Edit List" HorizontalAlignment="Left" Margin="90,33,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBlock x:Name="txtArePlaying" HorizontalAlignment="Left" Margin="10,95,0,0" TextWrapping="Wrap" Text="You are playing:" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtGameResult" HorizontalAlignment="Left" Margin="10,116,0,0" TextWrapping="Wrap" Text="FUCK!" VerticalAlignment="Top" FontFamily="DejaVu Sans" FontSize="26.667"/>

    </Grid>
</Window>
